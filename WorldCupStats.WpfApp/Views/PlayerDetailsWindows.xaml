<Window x:Class="WorldCupStats.WpfApp.Views.PlayerDetailsWindows"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WorldCupStats.WpfApp.Views"
        mc:Ignorable="d"
        Title="PlayerDetailsWindows" Height="450" Width="800">
    <Grid Margin="10">
        <StackPanel>
            <Image Source="{Binding Picture}" Height="100" Width="100" Margin="0,0,0,10"/>
            <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="16" TextAlignment="Center"/>
            <TextBlock Text="Number: " FontWeight="Bold" />
            <TextBlock Text="{Binding ShirtNumber}" Margin="0,0,0,10"/>
            <TextBlock Text="Position: " FontWeight="Bold" />
            <TextBlock Text="{Binding Position}" Margin="0,0,0,10"/>
            <TextBlock Text="Captain: " FontWeight="Bold" />
            <TextBlock Text="{Binding IsCaptain}" Margin="0,0,0,10"/>
            <TextBlock Text="Goals scored: " FontWeight="Bold" />
            <TextBlock Text="{Binding GoalsScored}" Margin="0,0,0,10"/>
            <TextBlock Text="Yellow cards: " FontWeight="Bold" />
            <TextBlock Text="{Binding YellowCards}" Margin="0,0,0,10"/>
        </StackPanel>
        </Grid>
</Window>

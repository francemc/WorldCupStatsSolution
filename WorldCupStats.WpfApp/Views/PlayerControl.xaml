<UserControl x:Class="WorldCupStats.WpfApp.PlayerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="60" Height="80"
             MouseLeftButtonUp="PlayerControl_MouseLeftButtonUp">
             
    <StackPanel>
        <Grid Width="30" Height="30">
            <Ellipse Fill="White" Stroke="Black"/>
            <TextBlock Text="{Binding ShirtNumber}" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"/>
            
        </Grid>
        <TextBlock Text="{Binding Name}" TextWrapping="Wrap" TextAlignment="Center" FontSize="10" Margin="0,5,0,0"/>
        <TextBlock Text="{Binding Position}" FontSize="8" FontStyle="Italic" TextAlignment="Center" Foreground="#666"/>
    </StackPanel>
</UserControl>

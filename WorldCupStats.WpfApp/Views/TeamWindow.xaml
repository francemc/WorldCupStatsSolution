<Window x:Class="WorldCupStats.WpfApp.Views.TeamWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Team Details" Height="400" Width="300"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="{Binding Country}" FontSize="20" FontWeight="Bold" Grid.Row="0" Margin="0,0,0,10"/>
        <TextBlock Text="FIFA Code:" FontWeight="Bold" Grid.Row="1"/>
        <TextBlock Text="{Binding FifaCode}" Grid.Row="1" Margin="110,0,0,0"/>

        <TextBlock Text="Games Played:" FontWeight="Bold" Grid.Row="2"/>
        <TextBlock Text="{Binding GamesPlayed}" Grid.Row="2" Margin="110,0,0,0"/>

        <TextBlock Text="Wins:" FontWeight="Bold" Grid.Row="3"/>
        <TextBlock Text="{Binding Wins}" Grid.Row="3" Margin="110,0,0,0"/>

        <TextBlock Text="Losses:" FontWeight="Bold" Grid.Row="4"/>
        <TextBlock Text="{Binding Losses}" Grid.Row="4" Margin="110,0,0,0"/>

        <TextBlock Text="Draws:" FontWeight="Bold" Grid.Row="5"/>
        <TextBlock Text="{Binding Draws}" Grid.Row="5" Margin="110,0,0,0"/>

        <TextBlock Text="Goals For:" FontWeight="Bold" Grid.Row="6"/>
        <TextBlock Text="{Binding GoalsFor}" Grid.Row="6" Margin="110,0,0,0"/>

        <TextBlock Text="Goals Against:" FontWeight="Bold" Grid.Row="7"/>
        <TextBlock Text="{Binding GoalsAgainst}" Grid.Row="7" Margin="110,0,0,0"/>

        <TextBlock Text="Goal Differential:" FontWeight="Bold" Grid.Row="8"/>
        <TextBlock Text="{Binding GoalDifferential}" Grid.Row="8" Margin="110,0,0,0"/>
    </Grid>
</Window>

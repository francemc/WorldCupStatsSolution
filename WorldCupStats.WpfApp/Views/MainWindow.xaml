<!-- MainWindow.xaml -->
<Window x:Class="WorldCupStats.WpfApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="450" Width="800">
   
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <ComboBox ItemsSource="{Binding Genres}" SelectedItem="{Binding SelectedGenre}" 
                      Width="120" Margin="0,0,20,0"/>
            <Button Content="Settings" Command="{Binding OpenSettingsCommand}"
                    Margin="0,0,20,0"/>
        </StackPanel>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Team 1 Selection -->
            <StackPanel Grid.Column="0">
                <TextBlock Text="Select Team 1:" Margin="0,0,0,5"/>
                <ComboBox ItemsSource="{Binding Teams}" 
                          SelectedItem="{Binding SelectedTeam1}" 
                          DisplayMemberPath="DisplayName"/>
                <Button Content="View Team Details" Command="{Binding ViewTeamDetailsCommand}" 
                        CommandParameter="{Binding SelectedTeam1}" Margin="0,10,0,0"/>
                <ListBox ItemsSource="{Binding SelectedTeam1Players}" 
                         SelectedItem="{Binding SelectedPlayer}"
                         ItemTemplate="{StaticResource PlayerTemplate}" 
                         Margin="0,10,0,0"/>
            </StackPanel>

            <!-- Match Result -->
            <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="VS" FontSize="24" Margin="20"/>
                <TextBlock Text="{Binding MatchResult}" FontSize="36" FontWeight="Bold"/>
            </StackPanel>

            <!-- Team 2 Selection -->
            <StackPanel Grid.Column="2">
                <TextBlock Text="Select Team 2:" Margin="0,0,0,5"/>
                <ComboBox ItemsSource="{Binding OpponentTeams}" 
                          SelectedItem="{Binding SelectedTeam2}" 
                          DisplayMemberPath="DisplayName"/>
                <Button Content="View Team Details" Command="{Binding ViewTeamDetailsCommand}" 
                        CommandParameter="{Binding SelectedTeam2}" Margin="0,10,0,0"/>
            </StackPanel>
        </Grid>

        <!-- Status Bar -->
        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <TextBlock Text="{Binding StatusMessage}"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <ProgressBar Width="100" Height="16" IsIndeterminate="{Binding IsLoading}" 
                             Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>

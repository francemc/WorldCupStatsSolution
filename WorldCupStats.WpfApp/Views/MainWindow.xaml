<Window x:Class="WorldCupStats.WpfApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:WorldCupStats.WpfApp"
        Title="World Cup Stats" Height="550" Width="850"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">

    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Margin" Value="0,5,0,10"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#DDDDDD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Margin" Value="5,0,0,0"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Background" Value="#2A5C8F"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Width" Value="80"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Border Grid.Row="0" Background="#2A5C8F" Padding="15" Margin="0,0,0,15">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="WORLD CUP STATISTICS" 
                           FontSize="22" 
                           FontWeight="Bold" 
                           Foreground="White"/>
            </StackPanel>
        </Border>

        <!-- Tournament Info -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBlock Text="FIFA " 
                       FontSize="16" 
                       FontWeight="SemiBold"/>
            <TextBlock Text="{Binding SelectedGenre}" 
                       FontSize="16" 
                       FontWeight="Bold"
                       Foreground="#2A5C8F"/>
            <TextBlock Text=" WORLD CUP" 
                       FontSize="16" 
                       FontWeight="SemiBold"
                       Margin="5,0,0,0"/>
        </StackPanel>

        <!-- Main Content -->
        <Grid Grid.Row="2" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Team 1 Selection -->
            <Border Grid.Column="0" 
                    Background="White" 
                    CornerRadius="4" 
                    Padding="15"
                    Margin="0,0,10,0"
                    BorderBrush="#DDDDDD"
                    BorderThickness="1"
                    VerticalAlignment="Top">
                <StackPanel>
                    <TextBlock Text="TEAM 1" 
                               FontWeight="Bold" 
                               FontSize="14"
                               Margin="0,0,0,5"
                               Foreground="#2A5C8F"/>

                    <ComboBox ItemsSource="{Binding Teams}" 
                              SelectedItem="{Binding SelectedTeam1}" 
                              Width="280">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock>
                                    <Run Text="{Binding Name}" FontWeight="SemiBold"/>
                                    <Run Text=" (" Foreground="#666666"/>
                                    <Run Text="{Binding FifaCode}" Foreground="#666666"/>
                                    <Run Text=")" Foreground="#666666"/>
                                </TextBlock>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                    <Button Content="DETAILS" 
                            Command="{Binding ShowTeam1DetailsCommand}"
                            HorizontalAlignment="Left"/>

                </StackPanel>
            </Border>

            <!-- Match Result -->
            <Border Grid.Column="1" 
                    Background="White" 
                    CornerRadius="4" 
                    Padding="20,15"
                    VerticalAlignment="Center"
                    BorderBrush="#DDDDDD"
                    BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="RESULT" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Center"
                               Margin="0,0,0,5"
                               Foreground="#2A5C8F"/>

                    <Border Background="#F8F8F8" 
                            CornerRadius="4" 
                            Padding="20,10"
                            BorderBrush="#DDDDDD"
                            BorderThickness="1">
                        <TextBlock Text="{Binding MatchResult}" 
                                   FontSize="32" 
                                   FontWeight="Bold" 
                                   Foreground="#2A5C8F" 
                                   HorizontalAlignment="Center"/>
                    </Border>
                </StackPanel>
            </Border>

            <!-- Team 2 Selection -->
            <Border Grid.Column="2" 
                    Background="White" 
                    CornerRadius="4" 
                    Padding="15"
                    Margin="10,0,0,0"
                    BorderBrush="#DDDDDD"
                    BorderThickness="1"
                    VerticalAlignment="Top">
                <StackPanel>
                    <TextBlock Text="TEAM 2" 
                               FontWeight="Bold" 
                               FontSize="14"
                               Margin="0,0,0,5"
                               Foreground="#2A5C8F"/>

                    <ComboBox ItemsSource="{Binding OpponentTeams}" 
                              SelectedItem="{Binding SelectedTeam2}" 
                              Width="280">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock>
                                    <Run Text="{Binding Name}" FontWeight="SemiBold"/>
                                    <Run Text=" (" Foreground="#666666"/>
                                    <Run Text="{Binding FifaCode}" Foreground="#666666"/>
                                    <Run Text=")" Foreground="#666666"/>
                                </TextBlock>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                    <Button Content="DETAILS" 
                            Command="{Binding ShowTeam2DetailsCommand}"
                            HorizontalAlignment="Left"/>
                   

                </StackPanel>
            </Border>
            <!-- Reemplaza los dos controles de campo por uno solo -->
            <local:FootballFieldControl x:Name="MatchField" 
                                Grid.ColumnSpan="3"
                                Height="450"
                                Width="800"
                                Team1Players="{Binding Team1Players}"
                                Team2Players="{Binding Team2Players}"
                                VerticalAlignment="Bottom"/>
        </Grid>
    </Grid>
</Window>